<!-- ./views/index.handlebars -->

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>   
  </div>
  <div class="dropdown" style="text-align: right">
    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-expanded="false" >
      Sort 
    </a>

    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
      <a class="dropdown-item" href="/asc">A-Z</a>
      <a class="dropdown-item" href="/desc">Z-A</a>
      <a class="dropdown-item" href="/category">類別</a>
      <a class="dropdown-item" href="/location">地區</a>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class = "create" style = "text-align: center;">

  
</div>







</div>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns ">  
        {{#each rests}}
        {{!-- restaurant list --}}
        <div class = "mr-auto" style="display: inline">
          <a href="restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <span class="badge badge-pill badge-danger font-weight-normal">
                  4.1
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </div>
            </a>
            <div class = "mr-auto" style="text-align: right; display:inline-block">
              <input type="checkbox" name="isDone" {{#if this.isDone}} checked{{/if}} disabled>
              <a href="./restaurants/{{this._id}}" class = 'btn btn-outline-info btn-sm'>detail</a>
              <a href="./restaurants/{{this._id}}/edit" class = 'btn btn-outline-info btn-sm'>edit</a>
              <form  action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button class = 'btn btn-outline-danger btn-sm' type = 'submit'>delete</button>
              </form>
            </div>
            {{/each}}
        </div>
       </div>
    </div> 
  </div>
